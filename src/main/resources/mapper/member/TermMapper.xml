<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.fastcampus.ch4.dao.member.TermDao">

    <!-- TermDto를 위한 결과 매핑 정의 -->
    <resultMap id="TermResultMap" type="com.fastcampus.ch4.dto.member.TermDto">
        <id property="termId" column="term_id"/>
        <result property="termName" column="term_name"/>
        <result property="termContent" column="term_cont"/>
        <result property="required" column="rqrd"/>
        <result property="regDate" column="reg_date"/>
        <result property="regId" column="reg_id"/>
        <result property="upDate" column="up_date"/>
        <result property="upId" column="up_id"/>
    </resultMap>

    <!-- 새로운 약관 삽입 (term_id 제외) -->
    <insert id="insertTerm" parameterType="com.fastcampus.ch4.dto.member.TermDto" useGeneratedKeys="true" keyProperty="termId">
        INSERT INTO term (
            term_name, term_cont, rqrd, reg_date, reg_id, up_date, up_id
        ) VALUES (
                     #{termName}, #{termContent}, #{required}, #{regDate}, #{regId}, #{upDate}, #{upId}
                 )
    </insert>

    <!-- ID로 약관 조회 -->
    <select id="getTermById" parameterType="int" resultMap="TermResultMap">
        SELECT
            term_id,
            term_name,
            term_cont,
            rqrd,
            reg_date,
            reg_id,
            up_date,
            up_id
        FROM term
        WHERE term_id = #{termId}
    </select>

    <!-- 모든 약관 조회 -->
    <select id="getAllTerms" resultMap="TermResultMap">
        SELECT * FROM term
    </select>

    <!-- 기존 약관 업데이트 -->
    <update id="updateTerm" parameterType="com.fastcampus.ch4.dto.member.TermDto">
        UPDATE term
        SET
            term_name = #{termName},
            term_cont = #{termContent},
            rqrd = #{required},
            reg_date = #{regDate},
            reg_id = #{regId},
            up_date = #{upDate},
            up_id = #{upId}
        WHERE term_id = #{termId}
    </update>

    <!-- ID로 약관 삭제 -->
    <delete id="deleteTerm" parameterType="int">
        DELETE FROM term
        WHERE term_id = #{termId}
    </delete>

    <!-- 모든 약관 삭제 -->
    <delete id="deleteAllTerms">
        DELETE FROM term
    </delete>

    <!-- 모든 약관의 ID를 조회 -->
    <select id="getAllTermIds" resultType="int">
        SELECT term_id
        FROM term
    </select>

    <!-- 약관 동의 정보 저장 -->
    <insert id="insertTermAgreements" parameterType="java.util.List">
        INSERT INTO term_agree (id, term_id, term_agree, reg_date, reg_id, up_date, up_id)
        VALUES
        <foreach collection="list" item="item" separator=",">
            (#{item.id}, #{item.termId}, #{item.termAgree}, #{item.regDate}, #{item.regId}, #{item.upDate}, #{item.upId})
        </foreach>
    </insert>

</mapper>
